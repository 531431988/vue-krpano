<krpano onstart="loadscene(balcony);">
	<!-- 右键菜单 -->
  <include url="./plugins/contextmenu.xml" />
	<!-- 场景初始化 -->
	<include url="./plugins/start.xml" />

  <autorotate enabled="true"
	waittime="2.0"
	accel="1"
	speed="10.0"
	/>
  <scene name="balcony" title="测试"  thumburl="./panorama.tiles/balcony/thumb.jpg">
    <view hlookat="180" vlookat="0" fov="150" fovtype="MFOV"  />
    <preview url="./panorama.tiles/balcony/preview.jpg" />
    <image>
      <cube url="./panorama.tiles/balcony/pano_%s.jpg" />
    </image>
  </scene>


	<scene name="bedroom1" title="卧室1" thumburl="./panorama.tiles/bedroom1/thumb.jpg">
    <view hlookat="-1" vlookat="11" fov="120" fovtype="MFOV" />
    <preview url="./panorama.tiles/bedroom1/preview.jpg" />
    <image>
      <cube url="./panorama.tiles/bedroom1/pano_%s.jpg" />
    </image>
  </scene>

</krpano>
